{% extends 'layouts/layout-fluid.html.twig' %}

{% block title %}Nouvelle tâche{% endblock %}



{% block contentFluid %}
<div>
    <h1>Nouvelle tâche</h1>
    {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data'} }) }}

    {{ form_errors(form) }}

    <div class="container">

        <div class="row">

       

            <div class="col-sm-5 d-flex justify-content-center align-items-stretch border border-top-0 border-left-0 border-bottom-0">

                <div class="d-flex flex-column justify-content-center align-items-center">



                {{ form_label(form.cover) }}
{# pour concaténer on utilise le ~  #}
                <img class="mb-3 rounded-circle dd" src="{{ absolute_url(asset('img/' ~ img)) }}" alt="cover" width="340px" height="340px">

                <p>Importer une nouvelle image:</p>

                {{ form_errors(form.cover ) }}

                {{ form_widget(form.cover ) }}

                {{ form_help(form.cover ) }}

                </div>

            </div>

            <div class="col-sm-6 ms-3">

            {{ form_row(form.dueDate) }}

            {{ form_row(form.name) }}

            {{ form_row(form.description) }}

            {{ form_row(form.Enregistrer) }}

            </div>

       

        </div>

    </div>
    {{ form_end(form) }}

</div>
{% endblock %}
